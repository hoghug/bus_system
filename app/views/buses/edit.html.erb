<h1><%= @bus.name %></h1>

<form id="arrivals" action="/arrivals" method="post">
  <input type="hidden" name="bus_id" value="<%= @bus.id %>">
  <ul>
    <% @bus.line.stops.each do |stop| %>

      <li><%= stop.station.name %><input type="time" class="arrival-time" data-stop="<%= stop.id%>"></li>
    <% end %>
  </ul>
  <button class="btn btn-primary">Submit</button>
</form>



