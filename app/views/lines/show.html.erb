<h1><%= @line.name %></h1>
<h3>Stops</h3>
<ol class="stop-list">
  <% @line.stops.each do |stop| %>
    <li><%= link_to stop.station.name, station_path(stop.station) %>
      <a href="/stops/<%= stop.id %>"
        data-confirm = "Are you sure?"
        data-method="delete"
        rel="nofollow">
        <span class = "glyphicon glyphicon-remove"></span>
      </a>
    </li>
  <% end %>
</ol>
<hr>
<a href="javascript:void(0);" id="show-edit">Change Line Name</a> |
<%= link_to 'Show All Lines', lines_path %> |
<%= link_to 'Delete', line_path(@line),
                         :confirm => "You sure?",
                         :method => "delete" %>

<div id="edit-form">
  <%= render 'form' %>
</div>
